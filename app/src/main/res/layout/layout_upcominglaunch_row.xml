<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="28dp"
    android:layout_marginStart="28dp"
    android:layout_marginTop="16dp"
    android:background="@color/colorWhite"
    android:elevation="8dp"
    fresco:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/row_simpledraweeview_rocketimage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            fresco:actualImageScaleType="fitXY" />

        <TextView
            android:id="@+id/row_textview_launchname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            tools:text="Falcon 9 Full Thrust | Iridium-7" />

        <TextView
            android:id="@+id/row_textview_launchtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:textSize="14sp"
            tools:text="July 25, 2018 11:39:26 UTC" />

        <TextView
            android:id="@+id/row_textview_launchlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:textSize="14sp"
            tools:text="Vandenberg AFB, CA, USA" />

        <TextView
            android:id="@+id/row_textview_rocketname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_rocket_black_24dp"
            android:textSize="14sp"
            tools:text="Falcon 9 Full Thrust" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/row_button_watchlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_addtocalendar"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_ondemand_video_black_24dp"
                android:text="@string/watch_live"
                android:textSize="12sp" />

            <Button
                android:id="@+id/row_button_addtocalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_addtocalendar"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/baseline_calendar_today_black_18dp"
                android:text="@string/add_to_calendar"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>